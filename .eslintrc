{
  "env": {
    "browser": true,
    "es2021": true,
    "p5js/p5": true
  },
  "extends": ["eslint:recommended", "plugin:p5js/p5", "prettier"],
  "overrides": [
    {
      "env": {
        "node": true
      },
      "files": [".eslintrc.{js,cjs}"],
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "prefer-const": "error"
  },
  "plugins": ["p5js"]
}
